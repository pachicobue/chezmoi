layout {
	tab name="Default" hide_floating_panes=true {
		pane size=1 borderless=true {
			plugin location="zellij:tab-bar"
		}
		pane name="Main" {
			focus true
		}
		floating_panes {
			pane name="Terminal"{
				x "10%"
				y "10%"
				width "80%"
				height "80%"
			}
		}
		pane size=1 borderless=true {
			plugin location="zellij:status-bar"
		}
	}
}
